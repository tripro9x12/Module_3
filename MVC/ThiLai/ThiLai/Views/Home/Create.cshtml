@inject AppDbContext context
@model CreateCake
@{
    ViewBag.Title = "Create Cake";
    var catergory = ViewBag.Category as Category;
}
<div class="container">
    <form asp-controller="Home" asp-action="Create" method="post" class="mt-2">
        <input hidden value="@catergory.CategoryId" asp-for="CategoryId"/>
        <div class="row">
            <div class="col-sm-2 form-group">
                <label asp-for="TenBanh"></label>
            </div>
            <div class="col-sm-10 form-group">
                <input type="text" asp-for="TenBanh" class="form-control" />
                <span asp-validation-for="TenBanh" class="text-danger"></span>
            </div>
        </div>
        
        <div class="row">
            <div class="col-sm-2 form-group">
                <label asp-for="ThanhPhan"></label>
            </div>
            <div class="col-sm-10 form-group">
                <input type="text" asp-for="ThanhPhan" class="form-control" />
                <span asp-validation-for="ThanhPhan" class="text-danger"></span>
            </div>
        </div>
        <div class="row">
            <div class="col-sm-2 form-group">
                <label asp-for="GiaBan"></label>
            </div>
            <div class="col-sm-10 form-group">
                <input type="text" asp-for="GiaBan" class="form-control" />
                <span asp-validation-for="GiaBan" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-sm-2 form-group">
                <label asp-for="NSX"></label>
            </div>
            <div class="col-10">
                <input class="form-control" type="date" asp-for="NSX">
                <span asp-validation-for="NSX" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-sm-2 form-group">
                <label asp-for="HSD"></label>
            </div>
            <div class="col-10">
                <input class="form-control" type="date" asp-for="HSD">
                <span asp-validation-for="HSD" class="text-danger"></span>
            </div>
        </div>
        <div class="row">
            <div class="col-sm-2 form-group">

            </div>
            <div class="col-sm-10 form-group">
                <button type="submit" class="btn btn-primary btnn">Create</button>
                <button type="reset" class="btn btn-danger btnn">Cancel</button>
                <a asp-controller="Home" asp-action="Index" class="btn btn-warning btnn">Back</a>
            </div>
        </div>
    </form>
</div>