@model UserCreateViewModel
@{ 
    ViewBag.Title = "Create user";
    var Roles = ViewBag.Roles as IQueryable<IdentityRole>;
}
<form asp-controller="User" asp-action="Create" method="post" class="mt-2">
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="row">
        <div class="col-sm-2 form-group">
            <label asp-for="Email"></label>
        </div>
        <div class="col-sm-10 form-group">
            <input type="text" asp-for="Email" class="form-control" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-2 form-group">
            <label asp-for="Password"></label>
        </div>
        <div class="col-sm-10 form-group">
            <input type="password" asp-for="Password" class="form-control" />
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-2 form-group">
            <label asp-for="ConfirmPassword"></label>
        </div>
        <div class="col-sm-10 form-group">
            <input type="password" asp-for="ConfirmPassword" class="form-control" />
            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-2 form-group">
            <label asp-for="City"></label>
        </div>
        <div class="col-sm-10 form-group">
            <input type="text" asp-for="City" class="form-control" />
        </div>
    </div>
    <div class="row">
        <div class="col-sm-2 form-group">
            <label asp-for="Address"></label>
        </div>
        <div class="col-sm-10 form-group">
            <input type="text" asp-for="Address" class="form-control" />
        </div>
    </div>
    <div class="row">
        <div class="col-sm-2 form-group">
            <label asp-for="RoleId"></label>
        </div>
        <div class="col-sm-10 form-group">
            <select asp-for="RoleId" class="custom-select">
                <option value="">Select A Role</option>
                @if(Roles != null && Roles.Any())
                {
                    foreach(var role in Roles)
                    {
                        <option value="@role.Id">@role.Name</option>
                    }
                }
            </select>
            <span asp-validation-for="RoleId" class="text-danger"></span>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-12 form-group text-center">
            <button type="submit" class="btn btn-primary">create</button>
            <a asp-controller="User" asp-action="Index" class="btn btn-warning">Back</a>
        </div>
    </div>
</form>