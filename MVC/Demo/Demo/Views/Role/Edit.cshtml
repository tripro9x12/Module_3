@model EditRoleViewModel
@{
    ViewBag.Title = "Edit Role";
}
<h3>Role Management &gt; @ViewBag.Title</h3>
<form asp-controller="Role" asp-action="Edit" method="post" class="mt-2">
    <input hidden asp-for="RoleId" />
    <div class="row">
        <div class="col-sm-2 form-group">
            <label asp-for="RoleName"></label>
        </div>
        <div class="col-sm-10 form-group">
            <input type="text" asp-for="RoleName" class="form-control" />
            <span asp-validation-for="RoleName" class="text-danger"></span>
        </div>
    </div>

    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="row">
        <div class="col-sm-12 form-group text-center">
            <button type="submit" class="btn btn-primary">Update</button>
            <button type="button" class="btn btn-danger" data-toggle="modal" data-target="#deleteRoleModel">
                Delete
            </button>
            <a asp-controller="Role" asp-action="Index" class="btn btn-warning">Back</a>
        </div>
    </div>
</form>


<!-- The Modal -->
<div class="modal" id="deleteRoleModel">
    <div class="modal-dialog">
        <div class="modal-content">

            <!-- Modal Header -->
            <div class="modal-header">
                <h4 class="modal-title">Confirm Delete Role</h4>
                <button type="button" class="close" data-dismiss="modal">&times;</button>
            </div>

            <!-- Modal body -->
            <div class="modal-body">
                Are you sure want to remove this role?
            </div>

            <!-- Modal footer -->
            <div class="modal-footer">
                <a asp-controller="Role" asp-action="Delete" asp-route-id="@Model.RoleId" class="btn btn-danger">Yes</a>
                <button type="button" class="btn btn-primary" data-dismiss="modal">No</button>
            </div>

        </div>
    </div>
</div>
