@model HomeCreateViewModel 
@{ 
    ViewBag.Title = "Create Employee";
}
<form enctype="multipart/form-data" asp-controller="Home" asp-action="Create" method="post" class="mt-2">
    <div class="row">
        <div class="col-sm-2 form-group">
            <label asp-for="Fullname"></label>
        </div>
        <div class="col-sm-10 form-group">
            <input type="text" asp-for="Fullname" class="form-control" />
            <span asp-validation-for="Fullname" class="text-danger"></span>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-2 form-group">
            <label asp-for="Email"></label>
        </div>
        <div class="col-sm-10 form-group">
            <input type="text" asp-for="Email" class="form-control" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-2 form-group">
            <label asp-for="Department"></label>
        </div>
        <div class="col-sm-10 form-group">
            <select asp-for="Department" class="custom-select" asp-items="@Html.GetEnumSelectList<Dept>()">
                <option value="">Select A Department</option>
            </select>
            <span asp-validation-for="Department" class="text-danger"></span>

        </div>
    </div>
    <div class="row">
        <div class="col-sm-2 form-group">
            <label asp-for="Avatar"></label>
        </div>
        <div class="col-sm-10 form-group">
            <div class="custom-file">
                <input type="file" class="custom-file-input" asp-for="Avatar">
                <label class="custom-file-label" for="customFile">Choose file</label>
            </div>
            <span asp-validation-for="Avatar" class="text-danger"></span>

        </div>
    </div>
    @*<div asp-validation-summary="All"></div>*@
    <div class="row">
        <div class="col-sm-12 form-group text-center">
            <button type="submit" class="btn btn-primary">Create</button>
            <button type="reset" class="btn btn-danger">Cancel</button>
            <a asp-controller="Home" asp-action="Index" class="btn btn-warning">Back</a>
        </div>
    </div>
</form>

@section scripts{ 
    <script>
        $(document).ready(() => {
            $(".custom-file-input").on("change", function () {
                var fileName = $(this).val().split("\\").pop();
                $(this).siblings(".custom-file-label").addClass("selected").html(fileName);
            });
        });
    </script>
}