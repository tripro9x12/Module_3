@model LoginViewModel
@{
    ViewBag.Title = "Login Page";
}
<form asp-controller="Account" asp-action="Login" method="post" class="mt-2">
    <input hidden asp-for="ReturnUrl" value="@ViewBag.ReturnUrl" />
    <div class="row">
        <div class="col-sm-2 form-group">
            <label asp-for="Email"></label>
        </div>
        <div class="col-sm-10 form-group">
            <input type="text" asp-for="Email" class="form-control" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-2 form-group">
            <label asp-for="Password"></label>
        </div>
        <div class="col-sm-10 form-group">
            <input type="password" asp-for="Password" class="form-control" />
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-2 form-group">
            <label asp-for="RememberMe">&nbsp;</label>
        </div>
        <div class="col-sm-10 form-group">
            <label class="form-check-label">
                <input type="checkbox" asp-for="RememberMe"> Remember me
            </label>
        </div>
    </div>
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="row">
        <div class="col-sm-12 form-group text-center">
            <button type="submit" class="btn btn-primary">Login</button>
            <a asp-controller="Home" asp-action="Index" class="btn btn-warning">Back</a>
        </div>
    </div>
</form>